{
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.tabSize": 4
  },
  "cSpell.enabled": true,
  "cSpell.ignoreWords": [
    "automodule",
    "bdeps",
    "bootctl",
    "bootloader",
    "bootx",
    "chdir",
    "cmdline",
    "cpus",
    "depclean",
    "deps",
    "devel",
    "dracut",
    "eclean",
    "ecleans",
    "eselect",
    "esync",
    "genindex",
    "icedtea",
    "iname",
    "initramfs",
    "initrd",
    "isfunction",
    "kdewebkit",
    "kver",
    "libreoffice",
    "llvm",
    "maxdepth",
    "minenv",
    "mkconfig",
    "modindex",
    "mypy",
    "newuse",
    "pylint",
    "pytest",
    "qtwebengine",
    "qtwebkit",
    "reexec",
    "revdep",
    "sbsign",
    "sbsigntools",
    "sbverify",
    "spdx",
    "systemctl",
    "systemd",
    "toctree",
    "udvare",
    "uefi",
    "umask",
    "umasker",
    "upkeeprc",
    "vmlinuz"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.insertSpaces": true,
  "editor.rulers": [100],
  "editor.tabSize": 2,
  "python.analysis.stubPath": ".stubs",
  "python.analysis.typeCheckingMode": "strict",
  "python.defaultInterpreterPath": "~/.virtualenvs/upkeep/bin/python",
  "python.formatting.provider": "yapf",
  "python.linting.flake8Enabled": false,
  "python.linting.pylintEnabled": true
}
